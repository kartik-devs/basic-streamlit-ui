[Unit]
Description=OCR Backend API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/OCR
Environment=PATH=/home/ubuntu/OCR/venv/bin
ExecStart=/home/ubuntu/OCR/venv/bin/uvicorn backend.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
