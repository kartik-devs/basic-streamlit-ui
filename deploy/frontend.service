[Unit]
Description=OCR Frontend Streamlit
After=network.target
Requires=backend.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/OCR
Environment=PATH=/home/ubuntu/OCR/venv/bin
ExecStart=/home/ubuntu/OCR/venv/bin/streamlit run main.py --server.port 8501 --server.address 0.0.0.0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
